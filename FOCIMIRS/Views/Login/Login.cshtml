@using FOCIMIRS.Models;
@{
    Layout = "~/Views/Shared/_LayoutHead.cshtml";
    ViewBag.Titile = "LoginFOCIMIRS";
}
    
	<div class="container">
		<div class="row">
			<div class="col-md-10 col-md-offset-1 panel panel-default">

				    <h4><p align="center">FOCIMIRS</p></h4><br>
                    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-signin" })) {
					  <div class="row">
                       
						   <div class="col-md-4 col-md-offset-4">
                             @Html.TextBox("Name", null, new { @style = "margin:5px", @class = "form-control", @placeholder = "Usuario" })
					       </div>
				      </div>
				      <div class="row">
						   <div class="col-md-4 col-md-offset-4">
                            @Html.Password("Pass", null, new { @style = "margin:5px", @class = "form-control", @placeholder = "Contraseña" })
					  </div>
				      </div>
					  <br>
					   <div class="row">
						   <div class="col-md-4 col-md-offset-4">
							               <p align="center"><a href="login.php"><button class="btn btn-success btn-lg btn-block">&nbsp;Entrar</button></a></p>
                                           <p class="alert-danger" id="msjerror" >@ViewBag.error</p>
					       </div>
				      </div>
					  <div class="margin-base-vertical">
					
				</div>
                    }
				      
				 </div>
				
				 <div class="row">
					<div class="col-md-4 col-md-offset-2">
					   
					        
						 
					</div>
					<div class="col-md-4">
					
					</div>
				</div>	
				

				

			</div><!-- //main content -->
		</div><!-- //row -->